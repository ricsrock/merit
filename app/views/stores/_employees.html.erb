<h1>All Employees</h1><hr>

<table class="table table-striped" id="sortable_table">
	<thead>
	<tr>
		<th>Person</th>
		<th>Position</th>
		<th>Status</th>
		<th>Actions</th>
	</tr>
	</thead>
	<tbody>
	<% if @store %>
	<% @store.employments.each do |employment| %>
		<tr>
			<td><%= employment.person.name %></td>
			<td><%= employment.position.name %></td>
			<td><%= status_badge(employment) %></td>
			<td>
				<div class="btn-group">
				  <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
				    Action
				    <span class="caret"></span>
				  </a>
				  <ul class="dropdown-menu">
				    <li>
				    	<%= link_to 'Destroy', employment, confirm: 'Are you sure you want to destroy this employment record? It will be as if this person was never employed. Click OK to destroy, click cancel to keep the employment record.', method: :delete %>
				    </li>
					<li>
						<%= link_to 'End Now', end_employment_path(employment) %>
					</li>
					<li>
						<%= link_to 'Edit Dates', set_dates_employment_path(employment) %>
					</li>
				  </ul>
				</div>
			</td>
		</tr>
	<% end %>
	<% end %>
	</tbody>
</table>