<fieldset><legend>Filter/Search Appraisals</legend><br>

<%= search_form_for @q do |f| %>
	<div class="form-inputs well">
		<%= f.label :employee_last_name, "Employee Last Name" %>
		<%= f.text_field :employee_last_name_cont %>
		<%= f.label :appraiser_last_name, "Appraiser Last Name" %>
		<%= f.text_field :appraiser_last_name_cont %>
		<%= f.label :review_period_name, "Review Period Name" %>
		<%= f.text_field :review_period_name_cont %>
	</div>
	<div class="form-actions">
		<%= f.submit nil, :class => "btn" %>
	</div>
<% end %>

</fieldset>