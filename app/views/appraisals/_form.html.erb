<%= simple_form_for(@appraisal, :html => { :class => 'form-horizontal' }) do |f| %>
	<fieldset>
		<legend>
			<%= controller.action_name.capitalize %> Appraisal
		</legend><br>
		<%= f.error_notification %>
		  <div class="form-inputs">
		    <%= f.input :appraisal_form_id, :collection => AppraisalForm.all(:order => :name) %>
		    <%= f.input :employee_id, :collection => Person.all(:order => :last_name) %>
		    <%= f.input :appraiser_id, :collection => Person.managers %>
			<%= f.input :reviewer_id, :collection => Person.supervisors %>
		    <%= f.input :review_period_id, :collection => ReviewPeriod.all(:order => :name) %>
		  </div>

		  <div class="form-actions">
		    <%= f.submit nil, :class => 'btn btn-primary' %>
		    <%= link_to 'Cancel', appraisals_path, :class => 'btn' %>
		  </div>
  	</fieldset>
<% end %>
