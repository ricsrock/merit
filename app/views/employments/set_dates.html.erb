<h3>Editing Dates for Employment: <%= @employment.person.full_name %>, <%= @employment.position.name %> at <%= @employment.store.name %></h3><hr>

<%= simple_form_for @employment, :url => custom_dates_employment_path(@employment), :html => {:class => 'form-horizontal'} do |f| %>
	<%= f.input :start_date %>
	<%= f.input :end_date, :include_blank => true %>
	<%= f.submit 'Set Custom Dates', :class => 'btn btn-primary' %>
<% end %>