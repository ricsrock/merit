<h1><%= page_entries_info(@people).html_safe %></h1><hr>



<table class="table table-striped" id="sortable_table">
  <thead>
	  <tr>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Employee #</th>
			<th>Last Review</th>
			<th>Current Employments</th>
	    <th></th>
	  </tr>
  </thead>
  <tbody>
	<% @people.each do |person| %>
	  <tr>
	    <td><%= link_to person.first_name, person_path(person) %></td>
	    <td><%= person.last_name %></td>
		<td><%= person.employee_number %></td>
	    <td><%= person.last_review_date %></td>
		<td><%= person.current_employments.collect {|e| e.position_and_store}.to_sentence %></td>
	    <td><%= link_to 'Edit', edit_person_path(person), :class => 'btn btn-mini' %>
	    	<%= link_to 'Destroy', person, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-mini btn-danger' %>
	   </td>
	  </tr>
	<% end %>
  </tbody>
</table>

<%= paginate @people %>

<br />

<%= link_to "New Person", new_person_path, :class => 'btn btn-primary'  %>

<br />
&nbsp;

<% content_for :sidebar do -%>
	<%= render :partial => "sidebar" %>
<% end -%>

