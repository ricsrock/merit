<%= simple_form_for([:admin,@user], :html => { :class => 'form-horizontal' }) do |f| %>
	<fieldset>
		<legend>
			Change Password for User: <%= @user.login %>
		</legend><br>
		  <div class="form-inputs">
		    <%= f.input :password, :label => 'New Password' %>
		    <%= f.input :password_confirmation, :label => 'New Password Confirmation' %>
		  </div>

		  <div class="form-actions">
		    <%= f.submit nil, :class => 'btn btn-primary' %>
		    <%= link_to 'Cancel', admin_users_path, :class => 'btn' %>
		  </div>
  	</fieldset>
<% end %>
