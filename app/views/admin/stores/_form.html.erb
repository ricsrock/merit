<%= simple_form_for([:admin,@store], :html => { :class => 'form-horizontal' }) do |f| %>
	<fieldset>
		<legend>
			<%= controller.action_name.capitalize %> Store
		</legend>
		  <div class="form-inputs">
		    <%= f.input :name %>
		  </div>

		  <div class="form-actions">
		    <%= f.submit nil, :class => 'btn btn-primary' %>
		    <%= link_to 'Cancel', admin_stores_path, :class => 'btn' %>
		  </div>
  	</fieldset>
<% end %>
