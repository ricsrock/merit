<%= simple_form_for([:admin, @question], :html => { :class => 'form-horizontal' }) do |f| %>
	<fieldset>
		<legend>
			<%= controller.action_name.capitalize %> Question
		</legend>
	  <div class="form-inputs">
			<%= f.input :name %>
			<%= f.input :form_text, :input_html => {:rows => 3} %>
	  </div>
	  <div class="form-actions">
	      <%= f.submit nil, :class => 'btn btn-primary' %>
	      <%= link_to 'Cancel', questions_path, :class => 'btn' %>
	  </div>
  </fieldset>
<% end %>
