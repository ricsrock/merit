<%= simple_form_for([:admin, @section], :html => { :class => 'form-horizontal' }) do |f| %>
	<fieldset>
		<legend>
			<%= controller.action_name.capitalize %> Section
		</legend>
		    <%= f.input :name %>
		  <div class="form-actions">
		    <%= f.submit nil, :class => 'btn btn-primary' %>
		    <%= link_to 'Cancel', admin_sections_path, :class => 'btn' %>
		  </div>
  	</fieldset>
<% end %>
