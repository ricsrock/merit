<%= simple_form_for(@comment, :html => { :class => 'form-horizontal' }) do |f| %>
	<fieldset>
		<legend>
			<%= controller.action_name.capitalize %> Comment
		</legend>
		  <div class="form-inputs">
		    <%= f.input :appraisal_id %>
		    <%= f.input :section_id %>
		    <%= f.input :commenter_id %>
		    <%= f.input :note %>
		  </div>

		  <div class="form-actions">
		    <%= f.submit nil, :class => 'btn btn-primary' %>
		    <%= link_to 'Cancel', comments_path, :class => 'btn' %>
		  </div>
  	</fieldset>
<% end %>
