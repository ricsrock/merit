<%= simple_form_for(@pay_rate, :html => { :class => 'form-horizontal' }) do |f| %>
	<fieldset>
		<legend>
			<%= controller.action_name.capitalize %> Pay Rate for <%= @person.full_name %>
		</legend><br>
		  <div class="form-inputs">
		    <%= f.input :rate %>
		    <%= f.input :cadence, :collection => PayRate::CADENCES %>
			<%= f.input :person_id, :as => :hidden %>
		  </div>

		  <div class="form-actions">
		    <%= f.submit nil, :class => 'btn btn-primary' %>
		    <%= link_to 'Cancel', person_path(@person), :class => 'btn' %>
		  </div>
  	</fieldset>
<% end %>
