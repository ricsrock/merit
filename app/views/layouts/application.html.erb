<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Merit</title>
  <%= stylesheet_link_tag    "styles", :media => "all" %>
  <%= stylesheet_link_tag    "application", "token-input-facebook", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "jquery.tablesorter.min" %>
  <%# javascript_include_tag :high_charts %>
  <%= csrf_meta_tags %>
</head>
<body>	
	<div class="navbar navbar-fixed-top">
	    <div class="navbar-inner">
	      <div class="container">
	        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
	          <span class="icon-bar"></span>
	          <span class="icon-bar"></span>
	          <span class="icon-bar"></span>
	        </a>
	        <a class="brand" href="#">Merit</a>
	        <div class="nav-collapse">
	          <ul class="nav pull-left">
				<% if current_user %>
	            <li><%= link_to "Dashboard", dashboard_url %></li>
				<li class="divider-vertical"></li>
	            <li><%= link_to "Appraisals", appraisals_path %></li>
	            <li class="divider-vertical"></li>
			    <li><%= link_to "People", people_path %></li>
				<li class="divider-vertical"></li>
			    <li><%= link_to "Stores", stores_path %></li>
	            <% end %>
				<li class="divider-vertical"></li>
			  	<li>
			  		<%= link_to 'Admin', admin_dashboard_url %>
			  	</li>
	          </ul>
			  <ul class="nav pull-right">
			  	<%= render 'devise/menu/login_items' %>
			  </ul>
	        </div>
	      </div>
	    </div>
	</div>
	
	<div class="container">
		<div id="flash-container">
			<% flash.each do |name, msg| %>
			  <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
			    <a class="close" data-dismiss="alert">Ã—</a>
			    <%= msg %>
			  </div>
			<% end %>
		</div>
	  <div class="row">
	    <div class="span9">
			<%= yield %>
		</div>
	    <div class="span3">
	      <%= yield :sidebar %>
	   </div>
	  </div>
	</div>
</body>
</html>
