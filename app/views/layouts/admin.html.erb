<!DOCTYPE html>
<html>
<head>
  <title>Merit</title>
  <%= stylesheet_link_tag    "styles", :media => "all", :recursive => true %>
  <%= stylesheet_link_tag    "application", :media => "all", :recursive => true %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "jquery.tablesorter.min" %>
  <%# javascript_include_tag :high_charts %>
  <%= csrf_meta_tags %>
</head>
<body>	
	<div class="navbar navbar-fixed-top">
	    <div class="navbar-inner">
	      <div class="container">
	        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
	          <span class="icon-bar"></span>
	          <span class="icon-bar"></span>
	          <span class="icon-bar"></span>
	        </a>
	        <a class="brand" href="#">Admin</a>
	        <div class="nav-collapse">
			  <ul class="nav pull-right">
			  	<%= render 'devise/menu/login_items' %>
			  </ul>
	          <ul class="nav pull-left">
				<li><%= link_to "Questions", admin_questions_path %></li>
	            <li><%= link_to "Sections", admin_sections_path %></li>
	            <li><%= link_to "Appraisal Forms", admin_appraisal_forms_path %></li>
	            <li><%= link_to "Positions", admin_positions_path %></li>
	            <li><%= link_to "Stores", admin_stores_path %></li>
	            <li><%= link_to "Review Periods", admin_review_periods_path %></li>
				<li><%= link_to "Users", admin_users_path %></li>
				<li><%= link_to "Feedback Topics", admin_feedback_topics_path %></li>
				<li><%= link_to "Audits", admin_audits_url %></li>
	          </ul>
	        </div>
	      </div>
	    </div>
	  </div>
	
	<div class="container">
	  <div class="row">
		<% flash.each do |name, msg| %>
		  <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
		    <a class="close" data-dismiss="alert">Ã—</a>
		    <%= msg %>
		  </div>
		<% end %>
	    <div class="span9"  style="margin-top:40px;">
		  <%= yield %>
		</div>
	    <div class="span3">
	      <%= yield :sidebar %>
	   </div>
	  </div>
	</div>
</body>
</html>
